@model FinalAssignment.Models.UserMetaData

@{
    ViewBag.Title = "Dashboard";
}

<h2>Dashboard</h2>

<div class="row justify-content-md-start">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h2>
                    Welcome  <b>@Session["FullName"].ToString() !! </b>
                </h2>
            </div>
            <div class="card-body">
                @if (Session["FullName"] != null)
                {
                    <p>Name: @Session["FullName"].ToString()</p>
                    <p>Email: @Session["Email"].ToString()</p>
                    <a href="@Url.Action("Logout","Users")" class="btn btn-warning">Logout</a>
                }
            </div>
        </div>

    </div>
</div>