<!doctype html>
<html lang="en">

<head>
    <title>@ViewBag.Title - Products Management Application</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <!-- VENDOR CSS -->
    <link rel="stylesheet" href="~/assets/vendor/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/assets/vendor/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/assets/vendor/linearicons/style.css">
    <link rel="stylesheet" href="~/assets/vendor/chartist/css/chartist-custom.css">
    <!-- MAIN CSS -->
    <link rel="stylesheet" href="~/assets/css/main.css">
    <!-- FOR DEMO PURPOSES ONLY. You should remove this in your project -->
    <link rel="stylesheet" href="~/assets/css/demo.css">
    <!-- GOOGLE FONTS -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700" rel="stylesheet">
    <!-- ICONS -->
    <link rel="apple-touch-icon" sizes="76x76" href="~/assets/img/logo_icon.png">
    <link rel="icon" type="image/png" sizes="96x96" href="~/assets/img/logo_icon.png">
</head>

<body>
    <!-- WRAPPER -->
    <div id="wrapper">
        <!-- NAVBAR -->
        <nav class="navbar navbar-default navbar-fixed-top">
            <div class="brand" style="max-height:inherit;color:cornflowerblue;font-size:18px;">
                Products Management
            </div>
            @if (Session["image"] != null)
            {
                <div class="container-fluid">


                    <div class="navbar-btn">
                        <button type="button" class="btn-toggle-fullwidth"><i class="lnr lnr-arrow-left-circle"></i></button>

                    </div>
                    

                    <div id="navbar-menu">
                        <ul class="nav navbar-nav navbar-right">
                            @if (Session["image"] != null)
                            {

                                <li class="dropdown">

                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                        <img src='@Url.Content(Session["image"].ToString())' class="img-circle" alt="Avatar">
                                        <span>@Session["FullName"]</span> <i class="icon-submenu lnr lnr-chevron-down"></i>
                                    </a>
                                    <ul class="dropdown-menu">

                                        <li><a href="/Users/Logout"><i class="lnr lnr-exit"></i> <span>Logout</span></a></li>
                                    </ul>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            }
            </nav>
        <!-- END NAVBAR -->
        <!-- LEFT SIDEBAR -->
        @if (Session["image"] != null)
        {
            <div id="sidebar-nav" class="sidebar">
                <div class="sidebar-scroll">
                    <nav>
                        <ul class="nav">
                            <li><a href="/Users/Dashboard" class=""><i class="lnr lnr-home"></i> <span>Dashboard</span></a></li>
                            <li><a href="/Products/Index" class=""> <i class="fa fa-th-list" aria-hidden="true"></i><span>Product List</span></a></li>
                            <li><a href="/Products/Create" class=""><i class="fa fa-cart-plus" aria-hidden="true"></i><span>Add Product</span></a></li>




                        </ul>
                    </nav>
                </div>
            </div>
            <!-- END LEFT SIDEBAR -->
            <!-- MAIN -->
        }
            <div class="main">
                <div class="container-fluid" style="max-height:100vh;">
                    @RenderBody()
                </div>
            </div>
            <!-- END MAIN -->
            <div class="clearfix"></div>
            <footer>
                <div class="container-fluid">
                  
                </div>
            </footer>
        </div>
    <!-- END WRAPPER -->
    <!-- Javascript -->
    <script src="~/assets/vendor/jquery/jquery.min.js"></script>
    <script src="~/assets/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/assets/vendor/jquery-slimscroll/jquery.slimscroll.min.js"></script>
    <script src="~/assets/scripts/klorofil-common.js"></script>
    @RenderSection("scripts", required: false)
</body>

</html>
